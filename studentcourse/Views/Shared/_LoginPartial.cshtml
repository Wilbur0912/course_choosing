@using Microsoft.AspNetCore.Identity;
@using AuthSystem.Areas.Identity.Data;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{ 
    var currentUser = await UserManager.GetUserAsync(User);
}
<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-silver" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @currentUser.Name!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Courses", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-silver">Logout</button>
            </form>
        </li>
    }

</ul>
